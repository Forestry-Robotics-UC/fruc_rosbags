<?xml version="1.0"?>
<launch>
	<!-- GLOBAL TIME PARAM FOR ROSBAG PLAY  -->
	<param name="use_sim_time" value="true" />

	<!-- PLAY DATASET  -->
	<node pkg="rosbag" type="play" name="rosbag_play" output="screen"
		  args="--clock --skip-empty=2.0 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-15-37-17_0.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-15-52-17_1.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-16-07-17_2.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-16-22-17_3.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-16-37-17_4.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-17-01-32_0.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-17-16-32_1.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-17-31-32_2.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-17-46-32_3.bag 
		  $(find fruc_rosbags)/rosbags/recording_2020-11-13-18-01-32_4.bag 

		  /fused_point_cloud:=/lslidar_fused_pointcloud" />

	<!--display the bobcat (the dataset has an initial /tf_static with all the transforms -->
	<include file="$(find fruc_rosbags)/launch/display_semfire_bobcat.launch"/>

	<!-- Launch missing tfs for realsense and imu-->
	<include file="$(find fruc_rosbags)/launch/static_tfs.launch"/>

	<!-- launch rviz with custom profile-->
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find fruc_rosbags)/rviz/2021_ctcv_parking_lot_coimbra.rviz" output="screen"/>

</launch>

